@model List<GlobalAsset.Models.Package>
@{
    Layout = null;
}

<section class="content">
    <h2>Deposits</h2>
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <!-- Widget: user widget style 1 -->
                <div class="box box-widget widget-user-2">
                    <!-- Add the bg color to the header using any of the bg-* classes -->
                    <div class="widget-user-header bg-@(item.PackageColor)">
                        <div class="widget-user-image">
                            <img class="img-circle" src="../Uploads/ProfileImages/default-user.jpg" alt="User Avatar">
                        </div>
                        <!-- /.widget-user-image -->
                        <h3 class="widget-user-username">@(item.Name)</h3>
                        <h5 class="widget-user-desc">@(item.SubHeading)</h5>
                    </div>
                    <div class="box-body">
                        <ul class="nav nav-stacked">
                            <li><a href="#">Investment <span class="pull-right badge bg-blue">@(item.InvestmentText)</span></a></li>
                            <li><a href="#">Interest <span class="pull-right badge bg-aqua">@(item.Interest)%</span></a></li>
                            <li><a href="#">Duration <span class="pull-right badge bg-green">@(item.Duration) Days</span></a></li>
                        </ul>
                    </div>
                    <div class="box-footer">
                        <a href="Backend/index/#/BuyPackage/@(item.PackageID)" class="btn btn-warning pull-right">
                            <i class="fa fa-check"></i>
                            &nbsp;Buy Package
                        </a>
                    </div>
                </div>
                <!-- /.widget-user -->
            </div>
        }

        
    </div>

</section>
