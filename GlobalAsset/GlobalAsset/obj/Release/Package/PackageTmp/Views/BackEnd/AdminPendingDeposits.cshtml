@model List<GlobalAsset.Models.DepositHistoryItem>
@{
    Layout = null;
}

<section class="content">
    <h2>Deposits To Be Approved</h2>
    @if (Model.Count > 0)
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="box box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title">Pending On Approval</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th style="width: 10%">Deposit ID</th>
                                <th>Package Name</th>
                                <th>Amount</th>
                                <th>Purchased On</th>
                                <th>Duration (Days)</th>
                                <th></th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="width: 10%">@(item.DepositID)</td>
                                    <td>@(item.PackageName)</td>
                                    <td>$@(item.Amount)</td>
                                    <td>@(item.PurchasedOn)</td>
                                    <td>@(item.Duration)</td>
                                    <td>
                                        <a class="btn btn-default bg-aqua btn-xs btn-block btn-flat" href="Backend/index/#/ViewDeposit/@(item.DepositID)">View</a>
                                    </td>
                                </tr>
                            }

                        </table>
                    </div><!-- /.box-body -->
                    <div class="box-footer">

                    </div><!-- box-footer -->
                </div><!-- /.box -->
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="box box-warning">
                    <div class="box-header with-border">
                    </div><!-- /.box-header -->
                    <div class="box-body text-center">
                        <div class="row">
                            <div class="col-md-5">
                            </div>
                            <div class="col-md-2">
                                <i class="ion ion-stats-bars text-gray" style="font-size:110px"></i>
                            </div>
                            <div class="col-md-5">
                            </div>
                            <div class="clearfix"></div>
                            <h2 class="text-gray">Hooray! Looks like there are no pending deposits.</h2>
                        </div>
                        <div class="row">

                        </div>

                    </div><!-- /.box-body -->
                    <div class="box-footer">

                    </div><!-- box-footer -->
                </div><!-- /.box -->
            </div>
        </div>
    }
</section>
