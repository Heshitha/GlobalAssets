@model List<GlobalAsset.Models.FriendCircleViewModel>
@{
    Layout = null;
}

<section class="content">
    <h2>My Friend Circle | @(Model.Count) People In Your Circle</h2>
    <div class="row">
        @if (Model.Count > 0)
        {
            <br />

            foreach (var item in Model)
            {
                <div class="col-md-4">
                    <!-- Widget: user widget style 1 -->
                    <div class="box box-widget widget-user">
                        <!-- Add the bg color to the header using any of the bg-* classes -->
                        <div class="widget-user-header bg-aqua-active">
                            <h3 class="widget-user-username">@(item.Name)</h3>
                            <h5 class="widget-user-desc">@(item.UserName)</h5>
                        </div>
                        <div class="widget-user-image">
                            <img class="img-circle" src="~/Uploads/ProfileImages/@(item.UserID.ToString() + item.ProfileImage)?@(DateTime.Now.Ticks.ToString())" alt="User Avatar" onerror="this.onerror = null; this.src = baseUrl + '/Uploads/ProfileImages/default-user.jpg'">
                        </div>
                        <div class="box-footer">
                            <div class="row">
                                <div class="description-block">
                                    <h5 class="description-header">@(item.JoinedDate)</h5>
                                    <span class="description-text">JOINED DATE</span>
                                </div>
                                <!-- /.description-block -->
                            </div>
                            <!-- /.row -->
                        </div>
                    </div>
                    <!-- /.widget-user -->
                </div>
            }
        }
        else
        {
                <div class="col-md-12">
                    <div class="box box-warning">
                        <div class="box-header with-border">
                            <h3 class="box-title">Friend Circle</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-5">
                                </div>
                                <div class="col-md-2 text-center">
                                    <i class="ion ion-stats-bars text-gray" style="font-size:110px"></i>
                                </div>
                                <div class="col-md-5">
                                </div>
                                <div class="clearfix"></div>
                                <h4 class="text-gray text-center">Oops! Looks like you dont have any one in circle. Share your sign up link among friends and get commission for each diposit they purchase.</h4>
                            </div>
                        </div><!-- /.box-body -->
                        <div class="box-footer">

                        </div><!-- box-footer -->
                    </div><!-- /.box -->
                </div>
        }
    </div>
    
</section>
