@model GlobalAsset.Models.UserViewModel
@{
    
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign Up | CMiningFarms.com</title>
    @Styles.Render("~/Content/Style")
    @Styles.Render("~/Content/Style/Fonts")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    @Styles.Render("~/AdminLTE/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/AdminLTE")
    @Styles.Render("~/Content/SiteCSS")
</head>
<body class="hold-transition register-page">
    <div class="register-box1 register-box">
        <div class="register-logo">
            @*<a href="#"><b>Find</b>RICH</a>*@
            <a href="https://www.cminingfarms.com/"><img src="~/Content/crypto/images/logo/logo.png" alt="CMiningFarms.com"></a>
        </div>
        <div class="register-box-body" style="width:720px">
            <div class="row">
                <div class="col-md-12">
                    <form method="post">
                        <h2>Cheers!!! @(Model.Name)</h2>
                        <p class="lead">We have sent an email to verify your email address. After verifying the account you can start earning money right away.</p>
                        <p class="text-yellow">Haven't recieved your mail yet?</p>
                        <button type="submit" class="btn btn-warning btn-flat">Click Here To Resend</button>
                        <input type="hidden" name="UserID" value="@Model.UserID" />
                    </form>
                    
                </div>
            </div>
        </div>
        <!-- /.form-box -->
    </div>
    <!-- /.register-box -->
    <!-- jQuery 2.2.3 -->
    <script src="../../plugins/jQuery/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="../../bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
